  }

  /// üîπ Asignar userId basado en el contenido de la nota
  int _assignUserIdBasedOnContent(String note) {
    final content = note.toLowerCase().trim();
    
    // Patrones para asignar usuarios espec√≠ficos
    if (content.contains('pedro')) {
      return 3; // Pedro
    }
    if (content.contains('mar√≠a') || content.contains('maria')) {
      return 2; // Mar√≠a
    }
    if (content.contains('juan')) {
      return 1; // Juan
    }
    if (content.contains('luc√≠a') || content.contains('lucia')) {
      return 4; // Luc√≠a
    }
    if (content.contains('ana')) {
      return 5; // Ana
    }
    
    // Si no hay patr√≥n, usar el usuario actual
    return ref.read(currentUserIdProvider);
  }

  // Construye el widget de notas con soporte para m√∫ltiples usuarios
  Widget _buildNotes(DateTime date, List<String> events) {
    final dateKey = _formatDate(date);
    final rawNotes = _dataService.getNotes()[dateKey] ?? [];

    if (rawNotes.isEmpty) {
      return const SizedBox.shrink();
    }
    
    // üîπ Dividir notas que contengan saltos de l√≠nea O espacios en notas separadas
    final notes = <String>[];
    for (final rawNote in rawNotes) {
      if (rawNote.contains('\n')) {
        // Dividir por saltos de l√≠nea y agregar cada parte como nota separada
        final splitNotes = rawNote.split('\n').where((note) => note.trim().isNotEmpty).toList();
        notes.addAll(splitNotes);
      } else if (rawNote.contains(' ') && rawNote.split(' ').length == 2) {
        // üîπ NUEVO: Dividir por espacios si son exactamente 2 palabras (como "Pedro Juan")
        final parts = rawNote.split(' ');
        for (final part in parts) {
          final trimmed = part.trim();
          if (trimmed.isNotEmpty) {
            notes.add(trimmed);
          }
        }
      } else {
        notes.add(rawNote);
      }
    }

    return Consumer(
      builder: (context, ref, child) {
        final eventTextSize = ref.watch(eventTextSizeProvider);
        
        // üé® Obtener usuarios √∫nicos que tienen eventos este d√≠a
        final userIds = <int>[];
        for (final note in notes) {
          // üîπ Para notas divididas, asignar userId basado en el contenido
          int userId;
          if (rawNotes.any((rawNote) => rawNote.contains('\n')) || 
              rawNotes.any((rawNote) => rawNote.contains(' ') && rawNote.split(' ').length == 2)) {
            // Si la nota original ten√≠a saltos de l√≠nea O era de 2 palabras, asignar basado en el contenido
            userId = _assignUserIdBasedOnContent(note);
          } else {
            // Usar el m√©todo normal para notas individuales
            userId = _dataService.getUserIdForEvent(date, note);
          }
          userIds.add(userId);
        }
        final hasMultipleNotes = notes.length > 1;
        
        // üêõ DEBUG: Log para verificar la l√≥gica
        if (notes.isNotEmpty) {
          print('üîç DEBUG _buildNotes para ${_formatDate(date)}:');
          print('   üìù RawNotes: $rawNotes');
          print('   üìù Notas divididas: $notes');
          print('   üë• UserIds: $userIds');
          print('   üìä hasMultipleNotes: $hasMultipleNotes');
        }
        
        return Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            // üìù Mostrar primera nota con su color
            Row(
              children: [
                Expanded(
                  child: Text(
                    notes.first,
                    style: EventUserService.getEventTextStyle(
                      userId: _dataService.getUserIdForEvent(date, notes.first),
                      fontSize: eventTextSize,
                      fontWeight: FontWeight.w600,
                    ),
                    maxLines: hasMultipleNotes ? 1 : 2, // 1 l√≠nea si hay m√°s notas
                    overflow: TextOverflow.ellipsis,
                  ),
                ),
              ],
            ),
            
            // üîπ Si hay m√°s notas, mostrar indicadores
            if (hasMultipleNotes) ...[
              const SizedBox(height: 2),
              Row(
                children: [
                  // Mostrar segunda nota si hay espacio
                  if (notes.length >= 2)
                    Expanded(
                      child: Text(
                        notes[1],
                        style: EventUserService.getEventTextStyle(
                          userId: _dataService.getUserIdForEvent(date, notes[1]),
                          fontSize: eventTextSize * 0.85, // Un poco m√°s peque√±o
                          fontWeight: FontWeight.normal,
                        ),
                        maxLines: 1,
                        overflow: TextOverflow.ellipsis,
                      ),
                    ),
                  
                  const SizedBox(width: 4),
                  
                  // Indicador de m√°s eventos
                  if (notes.length > 2)
                    Container(
                      padding: const EdgeInsets.symmetric(horizontal: 4, vertical: 1),
                      decoration: BoxDecoration(
                        color: Colors.grey[800],
                        borderRadius: BorderRadius.circular(8),
                      ),
                      child: Text(
                        '+${notes.length - 2}',
                        style: const TextStyle(
                          color: Colors.white,
                          fontSize: 8,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ),
                ],
              ),
            ],
            
          ],
        );
      },
    );
  }

  Widget _buildDayContent(DateTime date, List<String> events) {
    List<Map<String, dynamic>> shifts = [];
    List<String> notes = [];

    // Separar turnos y notas
    for (final eventTitle in events) {
      if (eventTitle.isNotEmpty) {
        final template = _dataService.getShiftTemplateByName(eventTitle);
        if (template != null) {
          shifts.add({
            'text': template.abbreviation.isNotEmpty ? template.abbreviation : template.name,
            'color': Color(int.parse(template.colorHex.substring(1, 7), radix: 16) + 0xFF000000),
            'textColor': Colors.white,
          });
        } else {
          // Es una nota
          notes.add(eventTitle);
        }
      }
    }

    // Obtener las notas para esta fecha desde el servicio
    final dateKey = _formatDate(date);
    final dateNotes = _dataService.getNotes()[dateKey] ?? [];
    if (dateNotes.isNotEmpty) {
      notes = dateNotes; // Usar las notas del servicio en lugar de las de events
    }

    // Si hay turnos, mostrar los nombres de los turnos
    if (shifts.isNotEmpty) {
      Widget turnoWidget;
      if (shifts.length == 1) {
        // Un solo turno - mostrar el nombre centrado
        final backgroundColor = shifts.first['color'] as Color;
        final textColor = _getHighContrastTextColor(backgroundColor);
        
        turnoWidget = Container(
          width: double.infinity,
          height: double.infinity,
          child: Center(
            child: Padding(
              padding: const EdgeInsets.all(2.0),
              child: Text(
                // Si hay notas, mostrar solo el texto de las notas (no el nombre del turno)
                notes.isNotEmpty ? notes.first : shifts.first['text'],
