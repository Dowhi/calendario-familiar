<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FF1A1A1A">

    <!-- Reloj digital -->
    <TextClock
        android:id="@+id/clockTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:textSize="72sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextClock
        android:id="@+id/clockAmPm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="a"
        android:format24Hour=""
        android:textSize="24sp"
        android:textColor="#FFBBBBBB"
        android:layout_marginBottom="48dp" />

    <!-- Icono de alarma -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        android:tint="#FFFF6B6B"
        android:layout_marginBottom="24dp" />

    <!-- Título de la alarma -->
    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarma"
        android:textSize="28sp"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Notas -->
    <TextView
        android:id="@+id/alarmNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FFBBBBBB"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <!-- Botón Silenciar -->
        <Button
            android:id="@+id/btnSnooze"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Silenciar (5 min)"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:background="#FF4A4A4A"
            android:layout_marginEnd="8dp" />

        <!-- Botón Descartar -->
        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="Descartar"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:background="#FFFF6B6B"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>

